<Window x:Class="PasswordManager.WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Login" 
        WindowState="Maximized"
        d:DesignWidth="1980"
        d:DesignHeight="1080"
        MinHeight="500"
        MinWidth="600">
    <Grid>

        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-300,-430,0,0" Width="100"/>

        <Button x:Name="SignupButton" Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="300,-430,0,0" Width="100"/>

        <Grid x:Name="GridLogin" HorizontalAlignment="Center" Height="400" VerticalAlignment="Center" Width="500">

            <Label Content="Login with existing account" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="170" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Border BorderBrush="Black" BorderThickness="1"/>

        </Grid>




        <Grid HorizontalAlignment="Left" Height="100" Margin="1760,115,0,0" VerticalAlignment="Top" Width="100"/>





    </Grid>
</Window>
